<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.zensar.training.bean.Product" table="products">
		<id name="id" column="PROD_ID">
			<generator class="assigned"></generator>
		</id>
		<property name="name" column="P_NAME"></property>
		<primitive-array name="discounts" table="product_discounts">
			<key column="id"></key>
			<index column="idx"></index>
			<element column="discounts" type="int"></element>
		</primitive-array>
	</class>

</hibernate-mapping>